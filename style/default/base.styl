
@import gradients
@import borders
@import shadows

body {
    background-color: #080808;
    gradient-stripes: 10px 0.05;
    font-family: sans-serif;
    font-size: 14px;
}

body > div {
    margin: 0 auto;
    width: 90%;
    padding: 0.5em;
}

input {
    background-color: #444;
    border: 1px solid #aaa;
    border-radius: 5px;
    shadow-inner-drop: #222;
    padding: 0.25em;
    padding-left: @padding * 2;
    margin-right: 0.25em;
    height: 1.25em;

    &:focus {
        shadow-inner-drop: black;
        outline: none;
    }

    &.number {
        text-align: right;
        padding-left: @padding;
        padding-right: @padding * 2;
    }
}

p {
    margin: 0;
}

p + p {
    margin-top: 0.5em;
}

ol, li {
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
    -webkit-margin-start: 0;
    -webkit-margin-end: 0;
    -webkit-padding-start: 0;
}

