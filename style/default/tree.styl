
@import borders
@import chevrons
@import clickables
@import colors

.tree {
    list-style: none;
    margin: 0;
    padding: 0;

    & > li {
        clear: both;
        overflow: hidden;
        padding: 0.25em 0;
        background-color: color-secondary;

        &:nth-child(2n) {
            background-color: color-secondary-lighter;
        }

        & + li {
            padding-top: 0;

            &::before {
                border-bottom: border-default();
                content: "";
                width: 100%;
                float: left;
                margin-bottom: 0.25em;
            }
        }

        & > .subtree {
            display: none;
            margin: 0.5em 0 -0.25em 0.5em;
            border-sides: ( top left ) ( border-default() );
            border-top-left-radius: 5px;
            clear: both;
            overflow: hidden;
        }

        & > .chevron {
            chevron-right: 0.45em color-border;
            cursor: pointer;
        }

        &.open {
            & > .subtree {
                display: block;
            }

            & > .chevron {
                chevron-down: 0.45em color-border;
            }
        }
    }
}

