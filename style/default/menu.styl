
@import borders
@import clickables
@import selection
@import shadows

.menu {
    list-style: none;
    padding: 0;

    & > * {
        position: relative;
        border-radius: 1em;
        user-select: none;
        user-drag: none;
        border: 1px solid #444;
        padding: 5px;
        clear-button( #444 );

        & > .submenu {
            position: absolute;
            display: none;
            top: 1.375em;
            width: 10em;
        }

        &:hover > .submenu {
            display: block;
        }
    }

    &.horizontal > * {
        display: inline-block;
    }

    & .submenu > .menu {
        padding: 0;
        display: inline-block;

        & > * {
            background: none;
            margin: 0 0.5em 0 0.25em;
        }
    }
}

