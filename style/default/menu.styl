
@import borders
@import clickables
@import selection
@import shadows

.menu {
    list-style: none;
    padding: 0;
}

.menu > * {
    position: relative;
    border-radius: 1em;
    user-select: none;
    user-drag: none;
    border: 1px solid #444;
    padding: 5px;
    clear-button( #444 );
}

.menu.horizontal > * {
    display: inline;
}

.menu > * > .submenu {
    position: absolute;
    display: none;
    top: 1.375em;
    width: 10em;
}

.menu > :hover > .submenu {
    display: block;
}

.submenu > .menu {
    padding: 0;
    display: inline-block;
}

.submenu > .menu > * {
    background: none;
    margin: 0 0.5em 0 0.25em;
}

